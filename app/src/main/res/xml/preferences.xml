<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/setting_universal">

        <Preference
            android:key="@string/key_preferences"
            android:persistent="false"
            android:title="@string/setting_preferences"
            android:summary="@string/setting_preferences_sub"/>

        <Preference
            android:title="@string/setting_assignment"
            android:key="@string/key_assignment"
            android:persistent="false"
            android:summary="@string/setting_assignment_sub"/>

        <Preference
            android:key="@string/key_notification"
            android:persistent="false"
            android:title="@string/setting_notification"
            android:summary="@string/setting_notification_sub"/>

        <Preference
            android:key="@string/key_data_backup"
            android:persistent="false"
            android:title="@string/setting_backup"
            android:summary="@string/setting_backup_sub"/>

        <Preference
            android:key="@string/key_data_security"
            android:persistent="false"
            android:title="@string/setting_data_security"
            android:summary="@string/setting_data_security_sub" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_theme">

        <CheckBoxPreference
            android:key="@string/key_is_dark_theme"
            android:title="@string/setting_dark_theme"
            android:summary="@string/setting_dark_theme_sub"/>

        <me.shouheng.omnilist.widget.ColorPreference
            android:key="@string/key_primary_color"
            android:persistent="false"
            android:title="@string/setting_primary_color"
            android:summary="@string/setting_primary_color_sub"/>

        <me.shouheng.omnilist.widget.ColorPreference
            android:key="@string/key_accent_color"
            android:persistent="false"
            android:title="@string/setting_accent_color"
            android:summary="@string/setting_accent_color_sub"/>

        <CheckBoxPreference
            android:key="@string/key_colored_navigation_bar"
            android:title="@string/setting_colored_navigation_bar"
            android:defaultValue="true"
            android:summary="@string/setting_colored_navigation_bar_sub"/>

        <Preference
            android:key="@string/key_dashboard"
            android:persistent="false"
            android:title="@string/setting_personalize_dashboard"
            android:summary="@string/setting_personalize_dashboard_sub"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_help">

        <Preference
            android:key="@string/key_user_guide"
            android:persistent="false"
            android:title="@string/setting_online_user_guide"
            android:summary="@string/setting_online_user_guide_sub"/>

        <Preference
            android:key="@string/key_user_intro"
            android:persistent="false"
            android:title="@string/setting_user_intro"
            android:summary="@string/setting_user_intro_sub"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_others">

        <Preference
            android:key="@string/key_support_development"
            android:persistent="false"
            android:title="@string/setting_support_development"
            android:summary="@string/setting_support_development_sub"/>

        <Preference
            android:key="@string/key_feedback"
            android:persistent="false"
            android:title="@string/setting_feedback"
            android:summary="@string/setting_feedback_sub"/>

        <Preference
            android:key="@string/key_about"
            android:persistent="false"
            android:title="@string/setting_about"
            android:summary="@string/setting_about_sub"/>

    </PreferenceCategory>

</PreferenceScreen>